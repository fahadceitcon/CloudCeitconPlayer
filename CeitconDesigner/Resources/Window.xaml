<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ceitcon_Designer.Resources">
    <!-- Window Maximize Button -->
    <Style x:Key="MaximizeButtonStyle" BasedOn="{x:Null}" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Canvas>
                            <Rectangle Fill="#00000000" Stroke="{StaticResource TextColor}" Width="11" Height="10.849" x:Name="outerRectangle"/>
                            <Rectangle Fill="{StaticResource TextColor}" Stroke="{StaticResource TextColor}" Width="11" Height="3.616" x:Name="rectangle"/>
                        </Canvas>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True"/>
                        <Trigger Property="IsDefaulted" Value="True"/>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Stroke" TargetName="rectangle" Value="{x:Null}"/>
                            <Setter Property="Fill" TargetName="rectangle" Value="{StaticResource ActivNormal}"/>
                            <Setter Property="Stroke" TargetName="outerRectangle" Value="{StaticResource ActivNormal}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Stroke" TargetName="outerRectangle" Value="#FF000000"/>
                            <Setter Property="Fill" TargetName="rectangle" Value="#FF000000"/>
                            <Setter Property="Stroke" TargetName="rectangle" Value="#FF000000"/>
                            <Setter Property="Fill" TargetName="outerRectangle" Value="#00624E4E"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False"/>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Window Close Button -->
    <Style x:Key="CloseButtonStyle" BasedOn="{x:Null}" TargetType="{x:Type Button}">
        <Setter Property="ToolTip" Value="Close"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Viewbox Stretch="Fill" Width="Auto" Height="Auto">
                            <Canvas Background="#00000000" Width="11" Height="11">
                                <Path Fill="#FFFFFFFF" Stretch="Fill" Stroke="{StaticResource TextColor}" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Width="8.634" Height="8.634" Data="M1.25,1.25 L8.8842157,8.8842157" Canvas.Left="1.25" Canvas.Top="1.25" x:Name="path" StrokeThickness="1"/>
                                <Path Fill="#FFFFFFFF" Stretch="Fill" Stroke="{StaticResource TextColor}" StrokeEndLineCap="Round" StrokeStartLineCap="Round" Width="8.634" Height="8.634" Data="M1.25,1.25 L8.8842157,8.8842157" RenderTransformOrigin="0.5,0.5" Canvas.Left="1.25" Canvas.Top="1.25" x:Name="path1">
                                    <Path.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            <SkewTransform AngleX="0" AngleY="0"/>
                                            <RotateTransform Angle="90"/>
                                            <TranslateTransform X="0" Y="0"/>
                                        </TransformGroup>
                                    </Path.RenderTransform>
                                </Path>
                            </Canvas>
                        </Viewbox>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True"/>
                        <Trigger Property="IsDefaulted" Value="True"/>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Stroke" TargetName="path" Value="{StaticResource ActivNormal}"/>
                            <Setter Property="Stroke" TargetName="path1" Value="{StaticResource ActivNormal}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True"/>
                        <Trigger Property="IsEnabled" Value="False"/>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Window Minimize Button -->
    <Style x:Key="MinimizeButtonStyle" BasedOn="{x:Null}" TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Canvas Background="#00000000">
                            <Path Fill="#FFFFFFFF" Stretch="Fill" Stroke="{StaticResource TextColor}" Width="12.003" Height="1" Data="M0.020833333,10.458333 L10.752447,10.458333" Canvas.Left="-0.504" Canvas.Top="9.996" x:Name="path"/>
                        </Canvas>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True"/>
                        <Trigger Property="IsDefaulted" Value="True"/>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Stroke" TargetName="path" Value="{StaticResource ActivNormal}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Stroke" TargetName="path" Value="#FF000000"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False"/>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>