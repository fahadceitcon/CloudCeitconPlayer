<Window x:Class="Ceitcon_Designer.View.OpenProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Designer.View"
        xmlns:model="clr-namespace:Ceitcon_Data.Model;assembly=Ceitcon_Data"
        xmlns:viewModel="clr-namespace:Ceitcon_Designer.ViewModel"
        xmlns:converters="clr-namespace:Ceitcon_Designer.Converters"
        xmlns:controls="clr-namespace:Ceitcon_Designer.Controls"
        xmlns:behaviors="clr-namespace:Ceitcon_Designer.Behaviors"
        mc:Ignorable="d"
        Title="Open Project" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="SingleBorderWindow"
        Height="480" Width="600"
        ResizeMode="CanMinimize"
        ShowInTaskbar="False"
        Topmost="False"
        BorderThickness="2"
        BorderBrush="{StaticResource TextColor}"
        Background="{StaticResource BackgroundLight}">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource StandartTextBlock}"/>
        <!--<Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource StandartTextBox}"/>-->
        <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource StandartScrollBar}"/>

        <Style TargetType="{x:Type ListBoxItem}">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Orange"/>
                </Trigger>
                <!--<Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F7F7F7"></Setter>
                </Trigger>-->
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Open Project" Style="{StaticResource StandartTextBlock}" HorizontalAlignment="Center" FontSize="18" />
        <ListBox x:Name="PlaylistListBox"
                 BorderThickness="0" 
                 Margin="0,40,0,0"
                 HorizontalContentAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"  
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StandartTextBlock}"
                                    ToolTip="{Binding Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,5,5,5" Width="150" />
                        <TextBlock Text="{Binding Location, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StandartTextBlock}"
                                    ToolTip="{Binding Location, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue='No Source'}" Margin="5" HorizontalAlignment="Left" Width="430" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--ItemsSource="{Binding Playlist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"-->


        <!--<Button Content="Cancel" Grid.Row="1" Style="{StaticResource ConfirmButton}" HorizontalAlignment="Center" Margin="5" Height="40" Width="90" Click="CancelButton_Click"/>-->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="Cancel" Style="{StaticResource ConfirmButton}" Margin="5" Height="40" Width="90" Click="CancelButton_Click"/>
            <Button Content="Open" Style="{StaticResource ConfirmButton}" Margin="5" Height="40" Width="90" Click="OpenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
