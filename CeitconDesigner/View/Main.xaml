<Window x:Class="Ceitcon_Designer.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Designer.View"
        xmlns:controls="clr-namespace:Ceitcon_Designer.Controls"
        xmlns:viewModel="clr-namespace:Ceitcon_Designer.ViewModel"
        xmlns:utilities="clr-namespace:Ceitcon_Designer.Utilities"
        xmlns:converters="clr-namespace:Ceitcon_Designer.Converters"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="Ceitcon Designer"
        d:DesignHeight="768"
        d:DesignWidth="1366"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Closed="Window_Closed"
        Width="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}"
        Height="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}"
        >
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.NewProject" CanExecute="NewProjectCommand_CanExecute" Executed="NewProjectCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.OpenProject" CanExecute="OpenProjectCommand_CanExecute" Executed="OpenProjectCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.OpenFile" CanExecute="OpenFileCommand_CanExecute" Executed="OpenFileCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.SaveProject" CanExecute="SaveProjectCommand_CanExecute" Executed="SaveProjectCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.SaveAsProject" CanExecute="SaveAsProjectCommand_CanExecute" Executed="SaveAsProjectCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.CloseProject" CanExecute="CloseProjectCommand_CanExecute" Executed="CloseProjectCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.ExitProject" CanExecute="ExitProjectCommand_CanExecute" Executed="ExitProjectCommand_Executed" />

        <CommandBinding Command="local:CustomCommands.AddScheduler" CanExecute="AddSchedulerCommand_CanExecute" Executed="AddSchedulerCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.RemoveSlide" CanExecute="RemoveSlideCommand_CanExecute" Executed="RemoveSlideCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.RemovePlaylist" CanExecute="RemovePlaylistCommand_CanExecute" Executed="RemovePlaylistCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.AddDepends" CanExecute="AddDependsCommand_CanExecute" Executed="AddDependsCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.RemoveDepends" CanExecute="RemoveDependsCommand_CanExecute" Executed="RemoveDependsCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.AddSource" CanExecute="AddSourceCommand_CanExecute" Executed="AddSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.ClearSource" CanExecute="ClearSourceCommand_CanExecute" Executed="ClearSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.DataGridSettings" CanExecute="DataGridSettingsCommand_CanExecute" Executed="DataGridSettingsCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.WeatherSettings" CanExecute="WeatherSettingsCommand_CanExecute" Executed="WeatherSettingsCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.OpenTextEditor" CanExecute="OpenTextEditorCommand_CanExecute" Executed="OpenTextEditorCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.RemoveAppointment" CanExecute="RemoveAppointmentCommand_CanExecute" Executed="RemoveAppointmentCommand_Executed" />

        <CommandBinding Command="local:CustomCommands.AddFajrSource" CanExecute="AddFajrSourceCommand_CanExecute" Executed="AddFajrSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.AddDhuhrSource" CanExecute="AddDhuhrSourceCommand_CanExecute" Executed="AddDhuhrSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.AddAsrSource" CanExecute="AddAsrSourceCommand_CanExecute" Executed="AddAsrSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.AddMaghribSource" CanExecute="AddMaghribSourceCommand_CanExecute" Executed="AddMaghribSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.AddIshaSource" CanExecute="AddIshaSourceCommand_CanExecute" Executed="AddIshaSourceCommand_Executed" />

        <CommandBinding Command="local:CustomCommands.ClearFajrSource" CanExecute="ClearFajrSourceCommand_CanExecute" Executed="ClearFajrSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.ClearDhuhrSource" CanExecute="ClearDhuhrSourceCommand_CanExecute" Executed="ClearDhuhrSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.ClearAsrSource" CanExecute="ClearAsrSourceCommand_CanExecute" Executed="ClearAsrSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.ClearMaghribSource" CanExecute="ClearMaghribSourceCommand_CanExecute" Executed="ClearMaghribSourceCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.ClearIshaSource" CanExecute="ClearIshaSourceCommand_CanExecute" Executed="ClearIshaSourceCommand_Executed" />

        <CommandBinding Command="local:CustomCommands.ShowProject" CanExecute="ShowProjectCommand_CanExecute" Executed="ShowProjectCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.ShowDesigner" CanExecute="ShowDesignerCommand_CanExecute" Executed="ShowDesignerCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.RemoveAlert" CanExecute="RemoveAlertCommand_CanExecute" Executed="RemoveAlertCommand_Executed" />

        <CommandBinding Command="local:CustomCommands.UploadPlayerRefresh" CanExecute="UploadPlayerRefreshCommand_CanExecute" Executed="UploadPlayerRefreshCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.ProofOfPlay" CanExecute="ProofOfPlayCommand_CanExecute" Executed="ProofOfPlayCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.RegisterPlayer" CanExecute="RegisterPlayerCommand_CanExecute" Executed="RegisterPlayerCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.UnregisterPlayer" CanExecute="UnregisterPlayerCommand_CanExecute" Executed="UnregisterPlayerCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.EditPlayer" CanExecute="EditPlayerCommand_CanExecute" Executed="EditPlayerCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.SendRTMessage" CanExecute="SendRTMessageCommand_CanExecute" Executed="SendRTMessageCommand_Executed" />


        <CommandBinding Command="local:CustomCommands.UploadLogo" CanExecute="UploadLogoCommand_CanExecute" Executed="UploadLogoCommand_Executed" />
        <CommandBinding Command="local:CustomCommands.DeleteLogo" CanExecute="DeleteLogoCommand_CanExecute" Executed="DeleteLogoCommand_Executed" />
    </Window.CommandBindings>
    <Grid Background="{StaticResource BackgroundLight}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle Panel.ZIndex="10" x:Name="hotspotRectangle" VerticalAlignment="Top" Fill="Transparent" Height="40" MouseLeftButtonDown="DragMouseLeftButtonDown" Margin="100,0,100,0"/>
      
        <Grid HorizontalAlignment="Stretch">
            <Grid.Resources>
                <Style TargetType="Rectangle">
                    <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=ActualHeight}"/>
                </Style>
            </Grid.Resources>

            <Button ContextMenuService.IsEnabled="False" HorizontalAlignment="Left" Width="40" Margin="10,0,0,0" 
                    ToolTip="Main Menu" 
                    Click="MenuButton_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" Width="30" Height="30">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="../Images/iconMainMenu.png" />
                                </Style>
                            </Image.Style>
                        </Image>
                    </ControlTemplate>
                </Button.Template>
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="_New Project" InputGestureText="Ctrl+N" Command="local:CustomCommands.NewProject"/>
                        <MenuItem Header="_Open Project" InputGestureText="Ctrl+O" Command="local:CustomCommands.OpenProject"/>
                        <MenuItem Header="_Open File" InputGestureText="Ctrl+F" Command="local:CustomCommands.OpenFile"/>
                        <MenuItem Header="_Save" InputGestureText="Ctrl+S" Command="local:CustomCommands.SaveProject"/>
                        <MenuItem Header="Save _As" InputGestureText="Ctrl+A" Command="local:CustomCommands.SaveAsProject"/>
                        <MenuItem Header="_Close" InputGestureText="Ctrl+C" Command="local:CustomCommands.CloseProject"/>
                        <MenuItem Header="_Exit" InputGestureText="Alt+F4" Command="local:CustomCommands.ExitProject"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <Button HorizontalAlignment="Left" Width="40" Margin="50,0,0,0"
                    ToolTip="Shink Layout" 
                    Click="ShrinkButton_Click">
                <Button.Template>
                    <ControlTemplate>
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" Width="30" Height="30">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="../Images/iconShrink.png" />
                                </Style>
                            </Image.Style>
                        </Image>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Width="30" Height="30" Source="../Images/iconCeitcon.png" />
                <TextBlock Text="Ceitcon Administrator" Margin="5" FontSize="20" Foreground="{StaticResource TextColor}"/>
            </StackPanel>
    
            <StackPanel HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="Auto" Height="Auto" Orientation="Horizontal" x:Name="windowButtonsStack">
                <Button x:Name="minimizeButton" Style="{StaticResource MinimizeButtonStyle}" Width="11" Height="11" Content=""  Click="minimizeButton_Click" Margin="0,0,0,0"/>
                <Button x:Name="maximizeButton" Style="{StaticResource MaximizeButtonStyle}" Width="11" Height="11" Content="" AllowDrop="False" Click="MaximizeButton_Click" Margin="7,0,0,0"/>
                <Button x:Name="closeButton" Style="{StaticResource CloseButtonStyle}" Width="13" Height="13" Content="" Click="closeButton_Click" Margin="7,0,0,0"/>
            </StackPanel>
        </Grid>

        <Rectangle Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{StaticResource BackgroundDark}"/>

        <Grid Grid.Row="2" Background="{StaticResource BackgroundNormal}">
            <TabControl x:Name="mainTab" TabStripPlacement="Left" Background="{StaticResource BackgroundLight}" 
                        SelectedIndex="{Binding ActivTab, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource MainTabItem}"/>
                </TabControl.Resources>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left" >
                            <Image Width="30" Height="30" Source="../Images/iconCeitcon.png" ToolTip="Home"/>
                            <TextBlock Text="Home" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:HomeControl DataContext="{Binding}"/>
                </TabItem>
                <TabItem Visibility="{Binding ShowDesignerTab, Mode=OneWay, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_GeneralInformation.png" ToolTip="General Information" />
                            <TextBlock Text="General Information" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:InformationControl DataContext="{Binding}" Margin="0,10,0,0"/>
                </TabItem>
                <TabItem Visibility="{Binding ShowDesignerTab, Mode=OneWay, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_RegionsAndCampaigns.png" ToolTip="Resolutions &amp; Regions" />
                            <TextBlock Text="Resolutions &amp; Regions" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:RegionsControl x:Name="ucRegions" DataContext="{Binding}" />
                </TabItem>
                <TabItem IsEnabled="{Binding Project.SelectedRegion, TargetNullValue=False}" Visibility="{Binding ShowDesignerTab, Mode=OneWay, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_Designer.png" ToolTip="Designer" />
                            <TextBlock Text="Designer" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <controls:DesignerControl x:Name="ucDesigner" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}" 
                        Visibility="{Binding IsAlert, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.InvertedCollapsed}}" />
                        <controls:AlertDesignerControl x:Name="ucAlertDesigner" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}" 
                        Visibility="{Binding IsAlert, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}" />
                    </Grid>
                </TabItem>
                <!--<TabItem IsEnabled="{Binding Project.SelectedRegion, TargetNullValue=False}" Visibility="{Binding ShowDesignerTab, Mode=OneWay, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_Alert.png" ToolTip="Alert" />
                            <TextBlock Text="Alert" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:AlertDesignerControl x:Name="ucAlertDesigner" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>-->
                <TabItem Visibility="{Binding User.PermissionScheduler, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_Scheduler.png" ToolTip="Scheduler"/>
                            <TextBlock Text="Scheduler" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:SchedulerControl x:Name="ucScheduler" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>
                <TabItem Visibility="{Binding User.PermissionNetwork, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_Network.png" ToolTip="Network" />
                            <TextBlock Text="Network" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:NetworkControl x:Name="ucNetwork" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>
                <TabItem Visibility="{Binding User.PermissionDataSource, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_DataSource.png" ToolTip="Data Sources" />
                            <TextBlock Text="Data Sources" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:DataSourceControl x:Name="usDataSource" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>
                <TabItem Visibility="{Binding User.PermissionAirlineLogo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_AirlineLogo.png" ToolTip="Airline Logo" />
                            <TextBlock Text="Airline Logo" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:AirlineLogoControl x:Name="usAirlineLogo" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>
                <TabItem Visibility="{Binding User.PermissionPlayersInformation, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_Player.png" ToolTip="Players Information"/>
                            <TextBlock Text="Players Information" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:PlayersControl x:Name="ucPlayers" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>
                <TabItem Visibility="{Binding User.PermissionProjectsInformation, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_Projects.png" ToolTip="Projects Information"/>
                            <TextBlock Text="Projects Information" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:ProjectsControl x:Name="usProjects" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>
                <TabItem Visibility="{Binding User.PermissionProofOfPlay, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_ProofOfPlay.png" ToolTip="Proof of Play" />
                            <TextBlock Text="Proof of Play" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:ProofOfPlayControl x:Name="usProofOfPlay" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>
                <!--<TabItem Visibility="{Binding User.PermissionReport, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_Report.png" ToolTip="Reports" />
                            <TextBlock Text="Reports" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:ReportControl x:Name="usReports" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>-->
                <TabItem Visibility="{Binding User.PermissionChannelsPublishing, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_RTM.png" ToolTip="Channels Publishing"/>
                            <TextBlock Text="Channels Publishing" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:RTServerControl x:Name="ucRTServer" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>
                <TabItem Visibility="{Binding User.PermissionUser, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
                    <TabItem.Header>
                        <StackPanel Width="200" Orientation="Horizontal" HorizontalAlignment="Left">
                            <Image Width="30" Height="30" Source="../Images/iconTabItem_User.png" ToolTip="Users &amp; Permissions" />
                            <TextBlock Text="Users &amp; Permissions" FontSize="16" Foreground="{StaticResource TextColor}" Margin="10"/>
                        </StackPanel>
                    </TabItem.Header>
                    <controls:PermissionControl x:Name="ucPermission" Grid.Row="2" Grid.RowSpan="2" DataContext="{Binding}"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>

