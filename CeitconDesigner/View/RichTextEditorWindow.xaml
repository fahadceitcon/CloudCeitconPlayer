<Window x:Class="Ceitcon_Designer.View.RichTextEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Designer.View"
        xmlns:controls="clr-namespace:Ceitcon_Designer.Controls"
        mc:Ignorable="d"
        xmlns:viewModel="clr-namespace:Ceitcon_Designer.ViewModel"
        Title="Rich Text Editor Window"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        BorderThickness="2"
        BorderBrush="{StaticResource TextColor}"
        Background="{StaticResource BackgroundLight}">
    <Grid>
        <Button Style="{StaticResource CloseButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Width="15" Height="15" Content="" Click="closeButton_Click" Margin="5" Panel.ZIndex="2"/>
        <controls:RichTextEditorControl x:Name="RichTextEditor" DataContext="{Binding}"/>
    </Grid>
</Window>
