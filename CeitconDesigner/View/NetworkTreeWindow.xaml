<Window x:Class="Ceitcon_Designer.View.NetworkTreeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Designer.View"
        xmlns:controls="clr-namespace:Ceitcon_Designer.Controls"
        xmlns:converters="clr-namespace:Ceitcon_Designer.Converters"
        mc:Ignorable="d"
        Title="Network" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        Height="500" Width="400"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        BorderThickness="2"
        BorderBrush="{StaticResource TextColor}"
        Background="{StaticResource BackgroundLight}">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource StandartTextBlock}"/>
        <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource StandartScrollBar}"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Select network location" Margin="10,5,5,5" />

        <controls:NetworkTreePlayerControl Grid.Row="1" x:Name="networkTreePlayer" Margin="2" 
                                           DataContext ="{Binding ., Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                           Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=ShowPlayer, Mode=OneWay, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}"/>
        <controls:NetworkTreePlayerGroupControl Grid.Row="1" x:Name="networkTreePlayerGroup" Margin="2" 
                                           DataContext ="{Binding ., Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                           Visibility="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=ShowPlayer, Mode=OneWay, Converter={x:Static converters:BoolToVisibilityConverter.InvertedCollapsed}}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Cancel" Style="{StaticResource ConfirmButton}" Margin="5" Height="40" Width="70" Click="CancelButton_Click" />
            <Button Content="Select" Style="{StaticResource ConfirmButton}" Margin="5" Height="40" Width="70" Click="SelectButton_Click" />
        </StackPanel>
    </Grid>
</Window>
