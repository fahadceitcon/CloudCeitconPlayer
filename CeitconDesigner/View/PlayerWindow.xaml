<Window x:Class="Ceitcon_Designer.View.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Designer.View"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:behaviors="clr-namespace:Ceitcon_Designer.Behaviors"
        xmlns:viewModel="clr-namespace:Ceitcon_Designer.ViewModel"
        mc:Ignorable="d"
        Title="Payer Information" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        Height="320" Width="350"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        BorderThickness="2"
        BorderBrush="{StaticResource TextColor}"
        Background="{StaticResource BackgroundLight}">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource StandartTextBlock}"/>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource StandartTextBox}"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource StandartTextBlock}">
                <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>
        </Grid.Resources>
        <TextBlock Grid.ColumnSpan="2" Text="PLAYER INFORMATION" HorizontalAlignment="Center" FontSize="18"/>
        <TextBlock Grid.Row="1" Text="Name: "/>
        <TextBlock Grid.Row="2" Text="HostName: "/>
        <TextBlock Grid.Row="3" Text="IPAddress: "/>
        <TextBlock Grid.Row="4" Text="RegistredTime: "/>
        <TextBlock Grid.Row="5" Text="LastConnection: "/>
        <!--<TextBlock Grid.Row="6" Text="Active: "/>-->
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="{Binding Identification, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding HostName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,15,5" MaxLength="50">
            <i:Interaction.Behaviors>
                <behaviors:TextBoxEnterKeyUpdateBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
         <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding IPAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,15,5" MaxLength="15">
            <i:Interaction.Behaviors>
                <behaviors:TextBoxEnterKeyUpdateBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding RegistredTime, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue='Not Registred'}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding LastConnection, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue='Not Registred'}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
        <!--<CheckBox Grid.Row="6" Grid.Column="1" IsChecked="{Binding Active, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,15"/>-->

        <StackPanel Grid.Row="7" Orientation="Horizontal" Grid.ColumnSpan="2">
            <Button Content="Cancel" Style="{StaticResource ConfirmButton}" Margin="70,15,5,5" Height="40" Width="100" Click="CancelButton_Click" />
            <Button Content="Update" Style="{StaticResource ConfirmButton}" Margin="5,15,5,5" Height="40" Width="100" Click="CreateButton_Click" />
        </StackPanel>
    </Grid>

</Window>
