<Window x:Class="Ceitcon_Designer.View.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Designer.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="None"
        Background="{StaticResource BackgroundNormal}"
	    MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Width="370"
        SizeToContent="Height">
    <!--<Grid Margin="15">
        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Value, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Name="pbStatus" />
        <TextBlock Text="{Binding ElementName=pbStatus, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>-->
    <Border >
        <StackPanel Margin="25,25,25,20">
            <TextBlock x:Name="messageText" Foreground="White" Text="Loading...." HorizontalAlignment="Left" TextTrimming="CharacterEllipsis"/>
            <ProgressBar Height="30" Maximum="100" Foreground="Green" IsIndeterminate="True" Margin="0,7,0,30" x:Name="progressBar"/>
            <Button x:Name="cancelButton" Style="{StaticResource ConfirmButton}" Cursor="Arrow" Click="cancelButton_Click" Height="36" IsCancel="True" IsDefault="True" Width="100" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" Margin="0,-10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <!--<Image Source="/Tribute.Controls;component/Images/Cancel.png" HorizontalAlignment="Left" VerticalAlignment="Center" Width="15" Height="15" Margin="5,0,0,0"/>-->
                    <TextBlock Text="Cancel" Margin="10,0,0,1"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</Window>
