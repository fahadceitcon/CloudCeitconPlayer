<Window x:Class="Ceitcon_Designer.View.WeatherSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Designer.View"
        xmlns:controls="clr-namespace:Ceitcon_Designer.Controls"
        mc:Ignorable="d"
        xmlns:viewModel="clr-namespace:Ceitcon_Designer.ViewModel"
        Title="Data Grid Settings" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        Height="400" Width="840"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        BorderThickness="2"
        BorderBrush="{StaticResource BackgroundNormal}"
        Background="{StaticResource BackgroundLight}">
    <Window.Resources>
        <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource StandartScrollBar}"/>
    </Window.Resources>
    <Grid>
        <!--<Button Style="{StaticResource CloseButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Width="15" Height="15" Content="" Click="closeButton_Click" Margin="5,5,5,5" Panel.ZIndex="2"/>-->
        <Grid Grid.Row="10" Background="{StaticResource BackgroundNormal}">
            <Button Style="{StaticResource CloseButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Width="15" Height="15" Margin="5" Content="" Click="closeButton_Click"/>
        </Grid>
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,25,0,0">
            <controls:WeatherSettingsControl DataContext="{Binding}" MainView="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=MainView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </ScrollViewer>
    </Grid>
</Window>
