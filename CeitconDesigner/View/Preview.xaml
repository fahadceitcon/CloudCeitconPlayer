<Window x:Class="Ceitcon_Designer.View.Preview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Designer.View"
        xmlns:controls="clr-namespace:Ceitcon_Designer.Controls"
        xmlns:viewModel="clr-namespace:Ceitcon_Designer.ViewModel"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded">
    <Grid Background="Black">
        <controls:PreviewControl x:Name="preview" ContentStretch="Uniform"
                                 DataContext ="{Binding ., Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
