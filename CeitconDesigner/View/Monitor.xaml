<Window x:Class="Ceitcon_Designer.View.Monitor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Designer.View"
        mc:Ignorable="d"
        xmlns:viewModel="clr-namespace:Ceitcon_Designer.ViewModel"
        Title="Resolution" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        Height="225" Width="325"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        BorderThickness="2"
        BorderBrush="{StaticResource TextColor}"
        Background="{StaticResource BackgroundLight}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="230"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource StandartTextBlock}" />
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource StandartTextBox}" />
        </Grid.Resources>

        <TextBlock Grid.ColumnSpan="2" Text="Create Monitor Schema" HorizontalAlignment="Center" FontSize="18"/>

        <TextBlock Grid.Row="1" Text="Name" Margin="10,10,5,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=NewMonitor.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxLength="50" Margin="5" TextAlignment="Left"/>

        <TextBlock Grid.Row="2" Text="Horizontal" Margin="10,10,5,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Width="30" HorizontalAlignment="Left" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=NewMonitor.Horizontal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}" MaxLength="2" Margin="5" TextAlignment="Right"/>

        <TextBlock Grid.Row="3" Text="Vertical" Margin="10,10,5,0" />
        <TextBox  Grid.Row="3" Grid.Column="1" Width="30" HorizontalAlignment="Left" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=NewMonitor.Vertical, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}" MaxLength="2" Margin="5" TextAlignment="Right"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="2">
            <Button Content="Cancel" Style="{StaticResource ConfirmButton}" Margin="60,15,0,0" Height="40" Width="100" Click="CancelButton_Click" />
            <Button Content="Create" Style="{StaticResource ConfirmButton}" Margin="10,15,0,0" Height="40" Width="100" Click="CreateButton_Click" />
        </StackPanel>
    </Grid>
</Window>

