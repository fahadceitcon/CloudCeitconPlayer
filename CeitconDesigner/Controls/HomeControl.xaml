<UserControl x:Class="Ceitcon_Designer.Controls.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:Ceitcon_Designer.View"
             xmlns:local="clr-namespace:Ceitcon_Designer.Controls"
             mc:Ignorable="d" >
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Ceitcon Digital Designer" FontSize="18" HorizontalAlignment="Center" Foreground="{StaticResource TextColor}"/>
        <TextBlock Text="Version 1.97" Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="16" Foreground="{StaticResource TextColor}"/>
        <Button Style="{StaticResource ConfirmButton}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Margin="10"
                Click="OpenProjectButton_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="../Images/iconButton_HomeOpen.png" Width="30" Height="30" Margin="5,5,15,5"/>
                <TextBlock Text="Open Project" Margin="5,8,5,5"/>
            </StackPanel>
        </Button>
        <Button Style="{StaticResource ConfirmButton}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Margin="10"
                Click="NewProjectButton_Click">
            <StackPanel Orientation="Horizontal" >
                <Image Source="../Images/iconButton_HomeAdd.png" Width="30" Height="30" Margin="5,5,15,5"/>
                <TextBlock Text="Create Project" Margin="5,8,5,5"/>
            </StackPanel>
        </Button>
    </StackPanel>
</UserControl>
