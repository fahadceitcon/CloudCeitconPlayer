<UserControl x:Class="Ceitcon_Designer.Controls.PercentageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:local="clr-namespace:Ceitcon_Designer.Controls"
             xmlns:converters="clr-namespace:Ceitcon_Designer.Converters"
             xmlns:behaviors="clr-namespace:Ceitcon_Designer.Behaviors"
             mc:Ignorable="d"
             Background="Transparent">
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" 
                 Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" 
                 MaxLength="8" Width="65" Height="20" TextAlignment="Right"
                 IsTabStop="False"
                 Visibility="{Binding IsChecked, ElementName=pbStations, Converter={x:Static converters:BoolToVisibilityConverter.InvertedCollapsed}}">
            <i:Interaction.Behaviors>
                <behaviors:TextBoxEnterKeyUpdateBehavior />
            </i:Interaction.Behaviors>
        </TextBox>

        <TextBox Grid.Column="0" 
                 Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}, Path=Percentage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}" 
                 MaxLength="8" Width="65" Height="20" TextAlignment="Right"
                 IsTabStop="False"
                 Visibility="{Binding IsChecked, ElementName=pbStations, Converter={x:Static converters:BoolToVisibilityConverter.Collapsed}}">
            <i:Interaction.Behaviors>
                <behaviors:TextBoxEnterKeyUpdateBehavior />
            </i:Interaction.Behaviors>
        </TextBox>

        <ToggleButton Grid.Column="1" x:Name="pbStations" Background="Transparent" Width="14" Height="16" IsTabStop="False">
            <Image Margin="0,2,2,2" Stretch="Uniform" x:Name="img" >
                <Image.Style>
                    <Style TargetType="Image">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=pbStations,Path=IsChecked}" Value="True">
                                <Setter Property="Source" Value="../Images/iconPercentage.png" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ElementName=pbStations,Path=IsChecked}" Value="False">
                                <Setter Property="Source" Value="../Images/iconPixel.png" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </ToggleButton>
    </Grid>
</UserControl>
