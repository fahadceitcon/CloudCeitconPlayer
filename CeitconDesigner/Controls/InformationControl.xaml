<UserControl x:Class="Ceitcon_Designer.Controls.InformationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:controls="clr-namespace:Ceitcon_Designer.Controls"
             xmlns:behaviors="clr-namespace:Ceitcon_Designer.Behaviors">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource StandartTextBlock}">
                <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>
            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource StandartTextBox}" />
        </Grid.Resources>
        
        <TextBlock Text="Project Name:"/>
        <TextBlock Grid.Row="1" Text="Creator Name:"/>
        <TextBlock Grid.Row="2" Text="Owner:"/>
        <TextBlock Grid.Row="3" Text="Main Contact:"/>
        <TextBlock Grid.Row="4" Text="Phone:"/>
        <TextBlock Grid.Row="5" Text="Download Interval:"/>
        <TextBox Grid.Column="1" Text="{Binding Project.Information.ProjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="10,5,10,5" MaxLength="50">
            <i:Interaction.Behaviors>
                <behaviors:TextBoxEnterKeyUpdateBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Project.Information.CreatorName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Margin="10,5,10,5" MaxLength="50">
            <i:Interaction.Behaviors>
                <behaviors:TextBoxEnterKeyUpdateBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Project.Information.OwnerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="10,5,10,5" MaxLength="50">
            <i:Interaction.Behaviors>
                <behaviors:TextBoxEnterKeyUpdateBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Project.Information.MainContact, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="10,5,10,5" MaxLength="50">
            <i:Interaction.Behaviors>
                <behaviors:TextBoxEnterKeyUpdateBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
        <!--<TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Project.Information.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:(###)###-####}}" Margin="5" MaxLength="20" ToolTip="Enter phone number in format (555) 555-1234"/>-->
        <telerik:RadMaskedTextInput 
            Grid.Row="4" Grid.Column="1"
            Mask="### - ##########" 
            EmptyContent="Enter phone number in format 966-123123123" 
            Text="{Binding Project.Information.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            Margin="10,5,10,5" 
            Background="{StaticResource BackgroundNormal}"
            Foreground="{StaticResource TextColor}"
            BorderBrush="{StaticResource TextColor}"
            BorderThickness="1"/>
        
        <TextBlock Grid.Column="1" Text="*" HorizontalAlignment="Right" ToolTip="Required field"/>

        <TextBox Grid.Row="5" Grid.Column="1"
                 Text="{Binding Project.Information.Interval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:hh}:{0:mm}:{0:ss}, FallbackValue=00:00:00}"
                 ToolTip="Player will use this interval for checking is the new content available. If value is less than 10 sec player will use default 1 min."
                 MaxLength="9" Margin="10,5,10,5" Width="100" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
