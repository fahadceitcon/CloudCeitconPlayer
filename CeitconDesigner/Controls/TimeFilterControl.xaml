<UserControl x:Class="Ceitcon_Designer.Controls.TimeFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Ceitcon_Designer.Controls"
             xmlns:view="clr-namespace:Ceitcon_Designer.View"
             xmlns:model="clr-namespace:Ceitcon_Data.Model.Network;assembly=Ceitcon_Data"
             xmlns:converters="clr-namespace:Ceitcon_Designer.Converters"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:behaviors="clr-namespace:Ceitcon_Designer.Behaviors"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource StandartTextBlock}"/>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource StandartTextBox}"/>
        <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource StandartScrollBar}"/>
        <converters:BoolToIndexConverter x:Key="boolToIndexConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Background="{StaticResource HeaderBackground}">
            <TextBlock Text="TIME FILTER" Margin="10,5,5,5" Foreground="{StaticResource HeaderForeground}"/>
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Center" >
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource ConfirmButton}" ToolTip="Create Item" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="130" Margin="0,0,0,5"
                    Click="CreateButton_Click">
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="../Images/iconButton_NetworkAdd.png" Width="20" Height="20" Margin="5,10,5,5"/>
                        <TextBlock Text="Create Item" FontSize="16" Margin="5,8,5,5"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource ConfirmButton}" ToolTip="Delete Item" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="130" Margin="10,0,0,5"
                    Click="DeleteButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="../Images/iconButton_NetworkDelete.png" Width="20" Height="20" Margin="5,10,5,5"/>
                        <TextBlock Text="Delete Item" FontSize="16" Margin="5,8,5,5"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <ListBox Grid.Row="2"
                BorderThickness="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.CanContentScroll="False"
                ItemsSource="{Binding TimeFilters, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding SelectedTimeFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListBox.Resources>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF0086E3"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#FF0086E3"/>
                    </Style.Resources>
                </Style>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Id, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource StandartTextBlock}" Margin="5,7,0,5" HorizontalAlignment="Left"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <GridSplitter Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Width="3" HorizontalAlignment="Stretch" Cursor="SizeWE"/>

        <TextBlock Grid.Row="1" Grid.Column="2" Text="EDIT TIME" Margin="5" HorizontalAlignment="Center" Style="{StaticResource StandartTextBlock}" VerticalAlignment="Center"/>

        <Grid Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" Margin="5" HorizontalAlignment="Left" Style="{StaticResource StandartTextBlock}" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedTimeFilter.Id, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="5" HorizontalAlignment="Left" Style="{StaticResource StandartTextBlock}" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Value:" Margin="5" HorizontalAlignment="Left" Style="{StaticResource StandartTextBlock}" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedTimeFilter.Name, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="5" HorizontalAlignment="Left" Style="{StaticResource StandartTextBlock}" VerticalAlignment="Center"/>


            <TextBlock Grid.Row="2" Grid.Column="0" Text="Before Duration [min]:" Margin="5" HorizontalAlignment="Left" Style="{StaticResource StandartTextBlock}" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedTimeFilter.BeforeDuration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="140" MaxLength="10" Margin="5" HorizontalAlignment="Left">
                <i:Interaction.Behaviors>
                    <behaviors:TextBoxEnterKeyUpdateBehavior />
                </i:Interaction.Behaviors>
            </TextBox>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="After Duration [min]:" Margin="5" HorizontalAlignment="Left" Style="{StaticResource StandartTextBlock}" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedTimeFilter.AfterDuration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="140" MaxLength="10" Margin="5" HorizontalAlignment="Left">
                <i:Interaction.Behaviors>
                    <behaviors:TextBoxEnterKeyUpdateBehavior />
                </i:Interaction.Behaviors>
            </TextBox>

        </Grid>
    </Grid>
</UserControl>
