                            <x:Static Member="FontWeights.UltraBold"/>
                            <x:Static Member="FontWeights.UltraLight"/>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding .}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="Font Style:" Grid.Row="23" Margin="5,10,0,0" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=FontStyle}"/>
                        <ComboBox Grid.Column="1" Grid.Row="23" Margin="5" SelectedItem="{Binding FontStyle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=FontStyle}">
                            <x:Static Member="FontStyles.Normal"/>
                            <x:Static Member="FontStyles.Italic"/>
                            <x:Static Member="FontStyles.Oblique"/>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding .}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="Text Decoration:" Grid.Row="24" Margin="5,10,0,0" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=TextDecoration}"/>
                        <ComboBox Grid.Column="1" Grid.Row="24" Margin="5" SelectedValuePath="Content" SelectedValue="{Binding TextDecorationText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=TextDecoration}">
