            </Grid.ColumnDefinitions>
            <Grid.Background>
                <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing  Brush="White">
                            <GeometryDrawing.Geometry>
                                <RectangleGeometry Rect="0,0,40,40"/>
                            </GeometryDrawing.Geometry>
                            <GeometryDrawing.Pen>
