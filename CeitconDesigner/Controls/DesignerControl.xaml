                        <TextBox Grid.Column="1" Grid.Row="34" Margin="5" Width="50" HorizontalAlignment="Left" TextAlignment="Right" Text="{Binding ItemCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=ItemCount}">
                            <i:Interaction.Behaviors>
                                <behaviors:TextBoxEnterKeyUpdateBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

