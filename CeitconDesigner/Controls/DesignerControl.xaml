                        <TextBox Grid.Column="1" Grid.Row="29" Margin="5" Text="{Binding MediaAccountId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=MediaAccountId}">
                            <i:Interaction.Behaviors>
                                <behaviors:TextBoxEnterKeyUpdateBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <TextBlock Text="Page Name:" Grid.Row="30" Margin="5,10,0,0" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=MediaPageName}"/>
                        <TextBox Grid.Column="1" Grid.Row="30" Margin="5" Text="{Binding MediaPageName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=MediaPageName}">
                            <i:Interaction.Behaviors>
                                <behaviors:TextBoxEnterKeyUpdateBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>

                        <TextBlock Text="Direction:" Grid.Row="31" Margin="5,10,0,0" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=FlowDirection}"/>
                        <ComboBox Grid.Column="1" Grid.Row="31" Margin="5" Width="100" HorizontalAlignment="Left" SelectedIndex="{Binding FlowDirection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter ={StaticResource boolToIndexConverter}}" Visibility="{Binding Type, Mode=OneWay, Converter={StaticResource PropertyToVisibility}, ConverterParameter=FlowDirection}">
                            <ComboBoxItem Content="Left-Right"/>
                            <ComboBoxItem Content="Right-Left"/>
                        </ComboBox>

