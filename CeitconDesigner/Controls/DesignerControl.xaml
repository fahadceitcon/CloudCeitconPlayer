                            MarginY="{Binding BorderThicknessTop, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            MarginW="{Binding BorderThicknessRight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
