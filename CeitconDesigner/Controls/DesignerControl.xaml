                            <i:Interaction.Behaviors>
                                <behaviors:TextBoxEnterKeyUpdateBehavior />
                            </i:Interaction.Behaviors>
                        </TextBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            
