                                                <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                            </BooleanAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>
                        </Button.Triggers>
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Set Content" Click="AddPlaylistButton_Click"/>
