                            <x:Static Member="TextDecorations.OverLine"/>
                            <x:Static Member="TextDecorations.Baseline"/>
                            <x:Static Member="TextDecorations.Underline"/>-->
                            <ComboBoxItem Content="Normal"/>
                            <ComboBoxItem Content="Strikethrough"/>
                            <ComboBoxItem Content="OverLine"/>
                            <ComboBoxItem Content="Baseline"/>
                            <ComboBoxItem Content="Underline"/>
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Content}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

