<Window x:Class="Ceitcon_Player.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ceitcon_Player.View"
        xmlns:util="clr-namespace:Ceitcon_Designer.Utilities;assembly=Ceitcon_Designer"
        xmlns:controls="clr-namespace:Ceitcon_Designer.Controls;assembly=Ceitcon_Designer"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <!--AllowsTransparency="True"-->
    <!--LostKeyboardFocus="Window_LostFocus"
        StateChanged="Window_StateChanged"-->
         
    <Window.Resources>
        <Style TargetType="util:VideoPlayer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="util:VideoPlayer">
                        <Rectangle Fill="{TemplateBinding VideoBrush}"></Rectangle>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Name="mainGrid">
        <controls:PreviewControl x:Name="preview" 
                                 ContentStretch="Uniform" 
                                 DataContext ="{Binding ., Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="0"/>
    </Grid>
</Window>