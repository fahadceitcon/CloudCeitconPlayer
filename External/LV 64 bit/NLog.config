<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      >



  <targets>


    <!--Writing events to the a file with the date in the filename.-->
    <target xsi:type="File" name="file1" fileName="${basedir}/logs/${shortdate}_LV.log"
            layout="${longdate} ${uppercase:${level}} ${message}${exception:format=ToString,StackTrace}${newline}" >
    </target>
  
  </targets>
   

  <rules>
    <!-- add your logging rules here -->


    <!--Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"-->
    <logger name="logfile1" minlevel="Debug" writeTo="file1" />
    
   

  </rules>
</nlog>